  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Firefox (for WSL)",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:40000/",
      "webRoot": "${workspaceFolder}",
      "pathMappings": [
        {
          "url": "http://localhost:40000/systems/investigator",
          "path": "vscode-remote://wsl%2Bubuntu-22.04/home/ndc/projects/investigator-fvtt/src",
        }
      ],
      "log": {
        "fileName": "C:/Users/ndc.ARKHAM/log.txt",
        "fileLevel": {
            "default": "Debug"
        }
      }
    },
    {
      "name": "Attach Firefox (for WSL)",
      "type": "firefox",
      "request": "attach",
      "url": "http://localhost:40000/",
      "webRoot": "${workspaceFolder}",
      "pathMappings": [
        {
          "url": "http://localhost:40000/systems/investigator",
          "path": "vscode-remote://wsl%2Bubuntu-22.04/home/ndc/projects/investigator-fvtt/src",
        }
      ],
      "log": {
        "fileName": "C:/Users/ndc.ARKHAM/log.txt",
        "fileLevel": {
            "default": "Debug"
        }
      }

    }
  ]
}